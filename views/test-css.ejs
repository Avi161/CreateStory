<div class="container mx-auto p-8">
    <h1 class="text-4xl font-bold mb-8">CSS Test Page</h1>
    
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Buttons</h2>
        <div class="space-x-4">
            <button class="btn btn-primary">Primary Button</button>
            <button class="btn btn-secondary">Secondary Button</button>
            <button class="btn btn-danger">Danger Button</button>
        </div>
    </div>
    
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Cards</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="card p-4">
                <h3 class="text-xl font-semibold mb-2">Card 1</h3>
                <p class="text-gray-600 dark:text-gray-400">This is a test card with hover effects.</p>
            </div>
            <div class="card p-4">
                <h3 class="text-xl font-semibold mb-2">Card 2</h3>
                <p class="text-gray-600 dark:text-gray-400">This is a test card with hover effects.</p>
            </div>
            <div class="card p-4">
                <h3 class="text-xl font-semibold mb-2">Card 3</h3>
                <p class="text-gray-600 dark:text-gray-400">This is a test card with hover effects.</p>
            </div>
        </div>
    </div>
    
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Form Elements</h2>
        <div class="max-w-md">
            <div class="form-group">
                <label class="form-label">Text Input</label>
                <input type="text" class="input-field" placeholder="Enter text...">
            </div>
            <div class="form-group mt-4">
                <label class="form-label">Textarea</label>
                <textarea class="textarea-field" placeholder="Enter longer text..."></textarea>
            </div>
            <div class="form-group mt-4">
                <label class="form-label">Select</label>
                <select class="select-field">
                    <option>Option 1</option>
                    <option>Option 2</option>
                    <option>Option 3</option>
                </select>
            </div>
        </div>
    </div>
    
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Alerts</h2>
        <div class="space-y-4">
            <div class="alert alert-success">This is a success alert</div>
            <div class="alert alert-error">This is an error alert</div>
        </div>
    </div>
    
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Tags and Pills</h2>
        <div class="space-x-2">
            <span class="story-tag">Tag 1</span>
            <span class="story-tag">Tag 2</span>
            <span class="genre-pill">Genre 1</span>
            <span class="genre-pill">Genre 2</span>
        </div>
    </div>
    
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Navigation</h2>
        <div class="flex space-x-4">
            <a href="#" class="nav-link active">Active Link</a>
            <a href="#" class="nav-link">Normal Link</a>
        </div>
    </div>
    
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Pagination</h2>
        <div class="flex space-x-2">
            <button class="pagination-btn">1</button>
            <button class="pagination-btn active">2</button>
            <button class="pagination-btn">3</button>
        </div>
    </div>
    
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Sort Buttons</h2>
        <div class="flex space-x-2">
            <button class="sort-btn">Sort 1</button>
            <button class="sort-btn active">Sort 2</button>
            <button class="sort-btn">Sort 3</button>
        </div>
