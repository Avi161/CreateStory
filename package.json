{
  "name": "create-story",
  "version": "1.0.0",
  "description": "An interactive and creative story building platform",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "npm install && npm install tailwindcss postcss autoprefixer && npx tailwindcss -i ./public/css/main.css -o ./public/css/output.css",
    "build:css": "postcss public/css/main.css -o public/css/output.css",
